<UserControl x:Class="GizmoBall.SpeedBoardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GizmoBall"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Slider Grid.Row="0" Grid.Column="1" 
                Orientation="Horizontal"/>
        <Slider Grid.Row="1" Grid.Column="0" 
                Orientation="Vertical" RenderTransformOrigin="0.5,0.5">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>

        <Canvas Name="Canvas" Grid.Row="1" Grid.Column="1" >
            
        </Canvas>
    </Grid>
</UserControl>
