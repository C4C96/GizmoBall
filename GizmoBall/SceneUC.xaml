<UserControl x:Class="GizmoBall.SceneUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GizmoBall"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas Name="MainCanvas" Background="Black">
        <Grid  Name="AxisGrid"
               Height="{Binding ElementName=MainCanvas, Path=ActualHeight}" 
               Width="{Binding ElementName=MainCanvas, Path=ActualWidth}" />


    </Canvas>
</UserControl>
